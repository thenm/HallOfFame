<% include ../partials/header.ejs %>
  <div class="container">
    <h1 class="text-center">Add Player to Hall of Fame </h1>
    <div class="row" style="width: 30%; margin: 0 auto;">
      <form action="/index" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Enter player name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Enter Image URL">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Enter description">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block">Add</button>
        </div>
      </form>
      <a href="/index">Go back</a>
    </div>
  </div>
