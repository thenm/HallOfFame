<% include ../partials/header %>
  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Hall Of Fame</h1>
        <p>View all the members of Hall of Fame</p>
        <a class="btn btn-primary btn-large" href="/index/add">Add player to HOF</a>
      </div>
    </header>

    <div class="row" style="display:flex; flex-wrap:wrap;">
      <div class="col-lg-12">
        <h2>
          Our most popular members of Hall of Fame
        </h2>
      </div>
    </div>
    <div class="row">
      <% players.forEach(function(player){ %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= player.image %>" alt="">
            <div class="caption">
              <h4>
                <%= player.name %>
              </h4>
              <p>
                <a href="index/<%= player._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
          </div>
        </div>
        <% }); %>
    </div>

  </div>
<% include ../partials/footer %>
