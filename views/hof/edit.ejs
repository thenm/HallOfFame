<% include ../partials/header.ejs %>
  <div class="container">
    <h1 class="text-center">Edit <%= player.name %> </h1>
    <div class="row" style="width: 30%; margin: 0 auto;">
      <form action="/index/<%= player._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="player[name]" value="<%= player.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="player[image]" value="<%= player.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="player[description]" value="<%= player.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block">Update</button>
        </div>
      </form>
      <a href="/index">Go back</a>
    </div>
  </div>
<% include ../partials/footer.ejs %>
